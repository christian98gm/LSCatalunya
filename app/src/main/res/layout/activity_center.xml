<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/centerSchoolImage"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_item_classroom" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/centerSchoolName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/centerSchoolAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/centerChildren"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/holo_purple"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:text="@string/children"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/centerPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/yellow"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:text="@string/primary"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/centerSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/holo_orange_light"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:text="@string/secondary"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/centerHighSchool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/holo_red_light"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:text="@string/high_school"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/centerVocationalTraining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/holo_green_light"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:text="@string/vocational_training"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/centerUniversity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/holo_blue_light"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:text="@string/university"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="4dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"
                    android:text="@string/description"/>

                <TextView
                    android:id="@+id/centerDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/centerMapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_menu_map"
        app:layout_anchor="@id/centerSchoolImage"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>