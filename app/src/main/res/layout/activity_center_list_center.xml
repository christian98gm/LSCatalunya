<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pink">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:tint="@android:color/white"
            android:src="@drawable/ic_delete_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="@string/delete"
            android:textColor="#fff"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:id="@+id/view_foreground"
        android:background="@drawable/item_clickable"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/centerListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/centerListPhoto"
            android:orientation="vertical">

            <TextView
                android:id="@+id/centerListName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:singleLine="true"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/centerListAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/centerListChildren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="0dp"
                    android:background="@android:color/holo_purple"
                    android:fontFamily="@font/roboto"
                    android:singleLine="true"
                    android:text="@string/children"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/centerListPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="0dp"
                    android:background="@color/yellow"
                    android:fontFamily="@font/roboto"
                    android:singleLine="true"
                    android:text="@string/primary"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/centerListSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="0dp"
                    android:background="@android:color/holo_orange_light"
                    android:fontFamily="@font/roboto"
                    android:singleLine="true"
                    android:text="@string/secondary"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/centerListHighSchool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="0dp"
                    android:background="@android:color/holo_red_light"
                    android:fontFamily="@font/roboto"
                    android:singleLine="true"
                    android:text="@string/high_school"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/centerListVocationalTraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="0dp"
                    android:background="@android:color/holo_green_light"
                    android:fontFamily="@font/roboto"
                    android:singleLine="true"
                    android:text="@string/vocational_training"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/centerListUniversity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_blue_light"
                    android:fontFamily="@font/roboto"
                    android:singleLine="true"
                    android:text="@string/university"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/centerListPhoto"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/school_photo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_item_classroom" />

    </RelativeLayout>

</FrameLayout>